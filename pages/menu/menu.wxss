/* pages/menu/menu.wxss */

page {
  height: 100%;
  background-color: #fff;
  overflow: hidden;
}

.header {
  padding-top: 20rpx;
}

.menu-container {
  height: 100%;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  background-color: #fff;
}

.left-view {
  width: 30%;
  height: 300rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.right-view {
  width: 70%;
  height: 300rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  margin-left:20rpx;
}

.nameAndPrice{
  width:100%;
  height:70rpx;
  border-bottom: 1px solid #eee;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.food-name{
  height: 70rpx;
  line-height:70rpx;
}

.food-name text{
  font-size:40rpx;
  font-weight: bold;
}

.food-price{
  height: 70rpx;
  line-height:70rpx;
}

.nutrition{
  width:100%;
  height:200rpx;
  border-bottom: 1px solid #eee;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.nutrition-view{
  width:50%;
  height:90rpx;
  border-bottom: 1px solid #eee;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}
.nutrition-view .icon-view{
  width:50rpx;
  height:50rpx;
}

.nutrition-view .icon-view .icon-image{
  width:100%;
  height:100%;
}

.commentAndLike{
  width:100%;
  height:30rpx;
  border-bottom: 1px solid #eee;
}

.food-pic {
  width: 100%;
  height: 80%;
  border-radius: 10px;
}

.food-item {
  width: 95%;
  margin: 20rpx auto;
  background: #fff;
  border-bottom: solid 2px #eee;
}
