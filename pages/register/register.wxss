/* pages/register/register.wxss */
page{
  background-color: #fff;
}

.container{
  height: 100%;
  display: flex;
  flex-direction: column;
  padding: 0;
  box-sizing: border-box;
}
/*表单*/
[class*="-form"]{
  flex:auto;
  height: 100%;
  width:90%;
  margin:0 auto;
  border-top:1px solid #d3d3d3;
}

/*输入框*/

[class*="-registerInputView"] {
  width: 90%;
  height: 100rpx;
  margin: 0 auto;
  border-radius: 50rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.margin-60 {
  margin-top: 60rpx;
}

.margin-20 {
  margin-top: 20rpx;
}

.margin-left-20{
  margin-left:20rpx;
}

.icon-view {
  margin-left: 50rpx;
  border-right: 1px solid #d3d3d3;
  padding-right: 20rpx;
}

.icon-view-image {
  width: 50rpx;
  height: 50rpx;
}

/*获取验证码按钮*/
.getMsnBtn{
  color: #fff;
  width:180rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 25rpx;
  border-radius: 10rpx;
  margin-right:20rpx;
}
/*注册按钮*/
.registerBtn{
  color: #fff;
  width: 90%;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 50rpx;
  margin-top: 100rpx;
}
.registerBtn-hover{
  transform: translate(1rpx, 1rpx);
}
