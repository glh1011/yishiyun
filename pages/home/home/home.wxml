<scroll-view scroll-y class="scrollPage">
  <view class="padding-xs flex align-center">
    <view class="flex-sub text-left">
      <view class="text-xxxl title-padding">
        <text class="textblack text-bold">吃一口</text>
      </view>
    </view>
  </view>
  <view class="flex">
    <view class="flex-sub padding-left">
      <view class="container">
        <canvas canvas-id="intakeCanvas" id="intakeCanvas" class="charts" touchstart="touchRing"></canvas>
      </view>
    </view>
    <view class="flex-twice">
      <view class='nav-list'>
        <view class="nav-li">
          <view class="nav-title">已摄入</view>
          <view class="nav-name">{{intake}}</view>
        </view>
        <view class="nav-li">
          <view class="nav-title">可摄入</view>
          <view class="nav-name">{{ingestible}}</view>
        </view>
        <view class="nav-li">
          <view class="nav-title">餐重</view>
          <view class="nav-name">{{mealWeight}}</view>
        </view>
        <view class="nav-li">
          <view class="nav-title">餐费</view>
          <view class="nav-name1">{{mealMoney}}</view>
        </view>
      </view>
    </view>
  </view>

  <view class="cu-bar bg-white">
    <view class="action">
      <text class="cuIcon-titles text-cyan"></text>轮播图轮播图
    </view>
  </view>
  <swiper class="card-swiper" next-margin="140rpx" circular="{{true}}">
    <swiper-item class="swiper-item">
      <navigator class="swiper-item" url="/pages/home/purchaseHistory/purchaseHistory" hover-class="none">
        <view style="background-image:url({{banner.banner4_url}});" class='swiper-image'>
          <view class="swiper-name">消费记录 
            <text class="cuIcon-pay text-white"></text>
          </view>
        </view>
      </navigator>
    </swiper-item>
    <swiper-item class="swiper-item">
      <navigator class="swiper-item" hover-class='none' url="../../pages/home/todayNutrition/todayNutrition">
        <view style="background-image:url({{banner.banner2_url}});" class='swiper-image'>
          <view class="swiper-name">营养分析 
            <text class="cuIcon-similar text-white"></text>
          </view>
        </view>
      </navigator>
    </swiper-item>
    <swiper-item class="swiper-item">
      <view class="swiper-item">
        <view style="background-image:url({{banner.banner1_url}});" class='swiper-image'>
          <view class="swiper-name">用餐推荐 
            <text class="cuIcon-form text-white"></text>
          </view>
        </view>
      </view>
    </swiper-item>
  </swiper>

  <navigator class="cu-bar bg-white" url="/pages/home/diningRecord/diningRecord" hover-class="none">
    <view class="action">
      <text class="cuIcon-titles text-cyan"></text>最近一次就餐记录
    </view>
    <view class="action">
      <view class="cu-tag round bg-cyan more-icon-container">
        <view class="cuIcon-more text-white xxl"></view>
      </view>
    </view>
  </navigator>
  <view class="cu-list menu-avatar">
   
  <block wx:for="{{lastEatLog}}" wx:for-item="item" wx:key>
    <view class="cu-item arrow">
      <image class="cu-avatar radius lg" src="{{item.dishImage}}"></image>
      <view class="content">
        <view class="text-grey">{{item.dishName}}</view>
        <view class="text-gray text-sm flex">
          <text class="text-cut margin-right-xs">
							<text>{{item.weight}}克</text>
          </text>
        </view>
      </view>
      <view class="action">
        <view class="cuIcon-right text-gray lg"></view>
        <view class="cu-tag round bg-white sm">{{item.money}}元</view>
      </view>
    </view>
  </block>

  </view>

  <view class="cu-bar bg-white">
    <view class="action">
      <text class="cuIcon-titles text-cyan"></text>本周最受欢迎的菜品
    </view>
  </view>
  <view class="padding-left padding-right menu-container">
    <view class="grid col-2 margin-bottom text-center">
      <view class="padding-sm">
        <view class="image">
          <image src="{{mostLike[0].dishesImage}}" mode="aspectFill" style='width:100%;height:300rpx; border-radius:8rpx'></image>
        </view>
        <view class="content flex-sub">
          <view class="text-grey text-sm flex justify-between">{{mostLike[0].dishesName}}</view>
          <view class="text-gray text-xs flex justify-between">{{mostLike[0].dishesCalorie}}千卡/克</view>
        </view>
      </view>
      <view class="padding-top-sm padding-left-lg padding-right-lg">
        <image src="{{mostLike[1].dishesImage}}" mode="aspectFill" style='width:100%;height:260rpx; border-radius:8rpx'></image>
        <view class="content flex-sub">
          <view class="text-grey text-sm flex justify-between">{{mostLike[1].dishesName}}</view>
          <view class="text-gray text-xs flex justify-between">{{mostLike[1].dishesCalorie}}千卡/克</view>
        </view>
      </view>
      <view class="padding-top-lg padding-left-sm padding-right-sm">
        <image src="{{mostLike[2].dishesImage}}" mode="aspectFill" style='width:100%;height:280rpx; border-radius:8rpx'></image>
        <view class="content flex-sub">
          <view class="text-grey text-sm flex justify-between">{{mostLike[2].dishesName}}</view>
          <view class="text-gray text-xs flex justify-between">{{mostLike[2].dishesCalorie}}千卡/克</view>
        </view>
      </view>
      <view class="padding-top-sm padding-left-lg padding-right-lg">
        <image src="{{mostLike[3].dishesImage}}" mode="aspectFill" style='width:100%;height:320rpx; border-radius:8rpx'></image>
        <view class="content flex-sub">
          <view class="text-grey text-sm flex justify-between">{{mostLike[3].dishesName}}</view>
          <view class="text-gray text-xs flex justify-between">{{mostLike[3].dishesCalorie}}千卡/克</view>
        </view>
      </view>
    </view>
  </view>

</scroll-view>