.title-padding {
  padding: 100rpx 0 0 50rpx;
}
.container {
  height: 300rpx;
  width: 300rpx;
  z-index: 100;
}
.charts {
  height: 300rpx;
  width: 300rpx;
  background-color: #FFFFFF;
}
.more-icon-container{
  font-size: 28rpx;
  padding: 0rpx 5rpx;
  height: 26rpx;
}
.text-xxxl {
	font-size: 60rpx;
}
.nav-list {
  display: flex;
  flex-wrap: wrap;
  padding: 0px 40rpx 0px;
  justify-content: space-between;
}
.nav-li {
  color: #1a1a1a;
  padding: 15rpx;
  border-radius: 12rpx;
  width: 45%;
  background-size: cover;
  background-position: center;
  position: relative;
  z-index: 1;
}
.nav-li::after {
  content: "";
  position: absolute;
  z-index: -1;
  background-color: inherit;
  width: 100%;
  height: 100%;
  left: 0;
  bottom: -10%;
  border-radius: 10rpx;
  opacity: 0.2;
  transform: scale(0.9, 0.9);
}
.nav-title {
  font-size: 28rpx;
  font-weight: 300;
}
.nav-name, .nav-name1 {
  font-size: 46rpx;
  text-transform: Capitalize;
  margin-top: 20rpx;
  position: relative;
}
.nav-name::after {
  content: "千卡";
  position: absolute;
  display: inline-block;
  width: 100rpx;
  bottom: 8rpx;
  opacity: 0.5;
  font-size: 23rpx;
}
.nav-name1::after {
  content: "元";
  position: absolute;
  display: inline-block;
  width: 100rpx;
  bottom: 8rpx;
  opacity: 0.5;
  font-size: 23rpx;
}
.nav-li text {
  position: absolute;
  right: 30rpx;
  top: 30rpx;
  font-size: 52rpx;
  width: 60rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
}
.swiper-image{
  width:100%;
  height:100%;
  background-size:cover; 
  font-size: 36rpx;
}
.swiper-name {
  line-height:200rpx;
  text-align:center;
  color: #fff;
  font-weight: 700;
}
.menu-container {
  margin-bottom: 120rpx;
}